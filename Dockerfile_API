FROM golang:1.23.4

WORKDIR /app/api

COPY ./api .

COPY ./defaults ../defaults

RUN go mod download

RUN go build -o main .

ENV GIN_MODE=release
ENV API_PORT=8080
ENV TZ=UTC

HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8080/v1/health | grep OK || exit

CMD ["./main"]
